{
  "name": "Firetext",
  "description": "A Word Processor for Firefox OS",
  "version": "0.3",
  "type": "privileged",
  "launch_path": "/index.html",
  "developer": {
    "name": "Codexa",
    "url": "http://www.codexa.org"
  },
  "icons": {
    "32": "/style/icons/app/32.png",
    "60": "/style/icons/app/60.png",
    "90": "/style/icons/app/90.png",
    "120": "/style/icons/app/120.png",
    "256": "/style/icons/app/256.png"
  },
  "default_locale": "en-US",
  "locales": {
    "ar": {
      "name": "Firetext",
      "description": "محرر نصوص لفايرفوكس OS"
    },
    "de": {
      "name": "Firetext",
      "description": "Ein Text-Editor für Firefox OS"
    },
    "el": {
      "name": "Firetext",
      "description": "Ένα κείμενο-editor για τον Firefox OS"
    },
    "en-US": {
      "name": "Firetext",
      "description": "A word processor for Firefox OS"
    },
    "es": {
      "name": "Firetext",
      "description": "Un editor de texto para Firefox OS"
    },
    "fr": {
      "name": "Firetext",
      "description": "Un éditeur de texte pour Firefox OS"
    },
    "it": {
      "name": "Firetext",
      "description": "Un editor di testo per Firefox OS"
    },
    "pt-BR": {
      "name": "Firetext",
      "description": "Um editor de texto para Firefox OS"
    },
    "ru": {
      "name": "Firetext",
      "description": "Текстовый редактор для Firefox OS"
    },
    "tr": {
      "name": "Firetext",
      "description": "Firefox OS için bir metin editörü"
    },
    "zh-TW": {
      "name": "Firetext",
      "description": "文本编辑器，火狐OS"
    }
  },
  "permissions": {
    "device-storage:sdcard": {
      "description": "Required for document storage.",
      "access": "readwrite"
    }
  },
  "activities": {
    "open": {
      "href": "./index.html",
      "disposition": "window",
      "filters": {
        "path": {
          "required": true
        },
        "type": [
          "text/plain",
          "text/html",
          "application/vnd.openxmlformats-officedocument.wordprocessingml.document"
        ],
        "editable": {
          "required": false
        }
      },
      "returnValue": false
    }
  }
}